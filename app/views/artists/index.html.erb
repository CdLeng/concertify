<div class="container">
  <h1 class="text-center">All Artists</h1>

    <% @artists.each do |artist|   %>
      <div class="card my-2">
        <div class="card-body">
          <h2><%= link_to "#{artist.name}", artist_path(artist)%></h2>
          <p><strong>Description: </strong><%= artist.description %></p>
        </div>
      </div>
    <% end %>
  <%= link_to "Go back", root_path, class: "btn btn-primary" %>

    <% if @results %>
      <% @results.each do |artist| %>
        <li><%= artist["name"] %></li>
      <% end %>
    <% end %>
</div>
