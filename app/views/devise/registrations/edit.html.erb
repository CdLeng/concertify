<div class="form-container">

  <div class="form-box">

    <h1 class="text-center login-header">Edit my profile</h1>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
      <%= f.input :photo,
                  hint: "You can change your profile picture here",
                  required: false,
                  input_html: { autocomplete: "name" }%>
      <%= f.input :name,
                  hint: "Optional",
                  required: false,
                  input_html: { autocomplete: "name" }%>
       <div class="mb-3">
        <%= f.label :country_code, "Country *", class: "form-label required" %>
        <%= f.country_select :country_code, {}, {class: "form-select"} %>
      </div>
      <%= f.input :city,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "city" }%>
      <%= f.input :address,
                  hint: "Optional",
                  required: false,
                  input_html: { autocomplete: "address" }%>
      <%= f.input :current_password,
                  hint: "Enter your current password to confirm",
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update", class: "btn-accent" %>
    </div>
  <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
