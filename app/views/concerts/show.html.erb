<div class="layout-container">
  <div class="show-concert-container">
    <div class="concert-title">
      <h2><%= link_to @concert.artist.name.upcase, artist_path(@concert.artist) %></h2>
      <p>Concert in <u><%= @concert.date.strftime("%d %B %Y") %></u></p>
    </div>



    <div class="concert-body">
      <div class="img-map">
        <% if @concert.image_url.present? %>
          <img src="<%= @concert.artist.image_url %>" alt="Concert image">
        <% else %>
          <img src="https://cdn.vysokeskoly.cz/czech-universities/uploads/2020/01/3380.jpg" alt="concert photo">
        <% end %>

                                <div class="map-box"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
        id='map'
        style='width: 50%; height: 300px;  border-top-right-radius: 20px;'></div>


      </div>

      <div class="description mb-5">
        <div class="box-left">
          <% last_space_index = @concert.artist.description.slice(0, 360).rindex(" ") %>
          <p><strong style="color: #39AEA9">ABOUT: </strong><%= @concert.artist.description.slice(0, last_space_index) ... %></p>
          <p><strong style="color: #39AEA9">WHERE: </strong><%= @concert.location %></p>
          <p><strong style="color: #39AEA9">WHEN: </strong><%= @concert.date.strftime("%d %B %Y") %></p>
        </div>
        <div class="box-right">
          <div class="box-price">
            <p><strong style="color: #39AEA9">PRICE FROM</strong></p>
            <% if @concert.price %>
              <p class="price"><%= @concert.price.floor %>â‚¬</p>
            <% end %>
         </div>

          <div class="box-buy">
            <%= link_to "Buy ticket", @concert.ticket_url, target: "_blank"%>
          </div>

          <div class="box-save">
          <% if user_signed_in? %>
            <% if @user_save %>
              <%= button_to "Save this concert", {action: "create", :concert_id => @concert.id, :controller => "saved_concerts", method: :post} %>
            <% else %>
              <%= button_to "Unsave this concert", {:controller => :saved_concerts,
              :action => 'destroy', :id => @concert.id }, :method => :delete, class: "btn-accent" %>
            <% end %>
          </div>
          <% end %>

        </div>
      </div>

  </div>

  <div>
  </div>
</div>


