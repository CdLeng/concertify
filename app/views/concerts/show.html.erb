<div class="layout-container">

  <div class="show-concert-container">
    <div class="concert-title">
      <h2><%= link_to @concert.artist.name.upcase, artist_path(@concert.artist) %></h2>
      <p>Concert in <u><%= @concert.date.strftime("%B %Y") %></u></p>
    </div>
    <div class="concert-body">
    <% if @concert.image_url.present? %>
      <img src="<%= @concert.artist.image_url %>" alt="Concert image">
    <% else %>
      <img src="https://cdn.vysokeskoly.cz/czech-universities/uploads/2020/01/3380.jpg" alt="concert photo">
    <% end %>
      <div class="description">
        <div class="box-left">
          <% last_space_index = @concert.artist.description.slice(0, 160).rindex(" ") %>
          <p><strong style="color: #39AEA9">ABOUT: </strong><%= @concert.artist.description.slice(0, last_space_index) ... %></p>
          <p><strong style="color: #39AEA9">WHERE: </strong><%= @concert.location %></p>
          <p><strong style="color: #39AEA9">WHEN: </strong><%= @concert.date %></p>
        </div>
        <div class="box-right">
          <div class="box-price">
            <p><strong style="color: #39AEA9">PRICE FROM</strong></p>
            <% if @concert.price %>
              <p class="price"><%= @concert.price.floor %>â‚¬</p>
            <% end %>
         </div>

          <div class="box-buy">
            <%= link_to "Buy ticket", @concert.ticket_url, target: "_blank"%>
          </div>

          <div class="box-save">
          <%= button_to "Save this concert", {action: "create", :concert_id => @concert.id, :controller => "saved_concerts", method: :post} %>
          </div>


        </div>
      </div>
    </div>
  </div>

  <div>
    <%= link_to "Go back", root_path, class: "btn btn-light my-5" %>
  </div>
</div>
